<%= form_for(blog) do |f| %>
  <% if blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% blog.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, :class => "form-control" %>
  </div>

  <div class="form-group">
    <label>Short Description</label>
    <%= f.text_area :bodydescrip, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :blogimage %>
    <%= f.file_field :blogimage, :class => "form-control" %>
  </div>

  <div class="form-group">
   <%= f.label :body %>
   <%= f.trix_editor :body, label: "Write Blog Post", :class => "form-control", :placeholder => "Blog content goes here." %><br>
  </div>

  <div class="form-group">
    <%= f.label :group_id %>
    <%= f.number_field :group_id %>
  </div>

  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.number_field :user_id %>
  </div>

  <div class="actions">
    <%= f.submit "Publish Blog", :class => "btn btn-primary" %>
  </div>
<% end %>
