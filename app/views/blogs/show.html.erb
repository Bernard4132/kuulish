
<style type="text/css">
  
  #sidebar {
    display: none;
  }

  .aduins{
 background:linear-gradient(0deg,rgba(0, 0, 0,0.7),rgba(0, 0, 0,0.7)),url(<%= @blog.blogimage %>);
  background-position:center;
  min-height: 250px;
  padding: 20px;
}

.btninvitejoin {
  background-color: #f17100;
  color: #ffffff;
  border-radius: 0;
  border: none;
  width: 100%;
}

.holdshareholder {
    background-color: #ffffff;
    border-radius: 10px;
    padding-top: 10px;
    padding-bottom: 7px;
    padding-left: 5px;
    padding-right: 5px;
    width: 100%;
    -webkit-box-shadow: 0px 3px 5px 0px rgba(50, 50, 50, 0.3);
-moz-box-shadow: 0px 3px 5px 0px rgba(50, 50, 50, 0.3);
box-shadow: 0px 3px 5px 0px rgba(50, 50, 50, 0.3);
  }

  .holdallposts {
    margin-top: 20px;
    background-color: #ffffff;
    border-radius: 10px;
    padding-top: 10px;
    padding-bottom: 7px;
    padding-left: 5px;
    padding-right: 5px;
    width: 100%;
    -webkit-box-shadow: 0px 3px 5px 0px rgba(50, 50, 50, 0.3);
-moz-box-shadow: 0px 3px 5px 0px rgba(50, 50, 50, 0.3);
box-shadow: 0px 3px 5px 0px rgba(50, 50, 50, 0.3);
  }


  .linkedinhomesharebtn {
  width: 100%;
  color: #ffffff;
  text-transform: uppercase;
  background-color: #0F78B9;
  border: none;
  border-radius: 0;
  margin-bottom: 12px;
}

.fbhomesharebtn {
  width: 100%;
  color: #ffffff;
  text-transform: uppercase;
  background-color: #3B5999;
  border: none;
  border-radius: 0;
  margin-bottom: 12px;
}

.twitterhomesharebtn {
  width: 100%;
  color: #ffffff;
  text-transform: uppercase;
  background-color: #00ACEE;
  border: none;
  border-radius: 0;
  margin-bottom: 12px;
}

</style>


<div class="container">
  <div class="row">

    <!-- Blog Body -->
    <div class="col-lg-9">

      <!-- Body image with title -->
      <div class="row">
        <div class="col-lg-12 aduins">
          <div class="row" style="position: relative; top: 140px;">
            <div class="col-lg-9">
              <h4 style="color: white;"><%= @blog.title %></h4>
              <p style="color: white;">Writen by: <%= @blog.user.name %></p>
            </div>

            <div class="col-lg-3">
              <a href="" class="btn btn-primary btninvitejoin">SHARE</a>
            </div>
          </div>
        </div>
      </div>

 <!-- Body text with author -->
      <div class="row">
        <div class="col-lg-12">
          <p style="color: #4a4a4a; margin-top: 10px;">Writen by: <%= @blog.user.name %></p>
          <h4 style="color: #4a4a4a; margin-top: 0px; margin-bottom: 30px;"><%= @blog.title %></h4>

          <div style="font-weight: 400; font-size: 14px;">
          <%=h raw @blog.body %>
          </div>
        </div>
      </div>

    </div>


    <!-- Side nav with share and other blogs -->
    <div class="col-lg-3">

     <!--  Share Kuulish -->
      <div class="row" style="margin-left: 10px; margin-right: 10px;">
        <div class="holdshareholder">
          <div class="col-lg-12">
            <div class="row">
              <div class="col-lg-12">
                <p style="text-align: center; font-weight: 400; color: #f17100;">Invite your friends and colleagues to Kuulish</p>
                <p style="text-align: center;">
                  <a href="fb-messenger://share/?link= https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fsharing%2Freference%2Fsend-dialog&app_id=123456789" target="_blank">
                    <img width="35px" height="35px" src="https://res.cloudinary.com/nikasemo/image/upload/v1577861686/messenger_yywjlv.png">
                  </a>
                  <a href="whatsapp://send?text=http://www.kuulish.com" target="_blank">
                    <img width="35px" height="35px" style="margin-left: 5px;" src="https://res.cloudinary.com/nikasemo/image/upload/v1577861686/whatsapp_3_zp0khe.png">
                  </a>
                  <a href="mailto:hello@kuulish.com" target="_blank">
                    <img width="35px" height="35px" style="margin-left: 5px;" src="https://res.cloudinary.com/nikasemo/image/upload/v1577861686/gmail_wnjtg4.png">
                  </a>
                  <img width="35px" height="35px" style="margin-left: 5px;" src="https://res.cloudinary.com/nikasemo/image/upload/v1577861686/outlook_rpkemc.png">
                </p>
              </div>
              <div class="col-lg-12">
                <div class="row">
                  <div class="col-lg-5 col-5">
                    <img src="https://res.cloudinary.com/nikasemo/image/upload/v1577863146/liner_ugorna.png" class="img-fluid">
                  </div>
                  <div class="col-lg-2 col-2">
                    <div style="text-align: center; width: 100%;">
                      <p style="text-align: center; font-weight: 500; color: #4a4a4a;">OR</p>
                    </div>
                  </div>
                  <div class="col-lg-5 col-5">
                    <img src="https://res.cloudinary.com/nikasemo/image/upload/v1577863146/liner_ugorna.png" class="img-fluid">
                  </div>
                </div>
              </div>

              <div class="col-lg-12">
                <p style="text-align: center;">Share Via Social Networks</p>
                <p>
                  <a href="https://www.linkedin.com/shareArticle?mini=true&url=http://kuulish.com&title=Join Kool Parents. Let's share what's going on!" class="btn btn-primary linkedinhomesharebtn" target="_blank"><i class="fab fa-linkedin"></i> LINKEDIN</a><br>
                  <a href="http://www.facebook.com/sharer.php?u=http://kuulish.com" class="btn btn-primary fbhomesharebtn"  target="_blank"><i class="fab fa-facebook-f"></i> FACEBOOK</a><br>
                  <a href="https://twitter.com/share?url=http://kuulish.com&amp;text=Know What is Going on as a parent..&amp;hashtags=KuulishParents" class="btn btn-primary twitterhomesharebtn" target="_blank">
                    <i class="fab fa-twitter"></i> TWITTER</a>
                </p>
              </div>
            </div>
          </div>
        </div>

      </div>

      <div class="row holdallposts">
        <p style="margin-left: 10px; color: #f17100; font-weight: 500;">Latests Posts</p>
        <% @allfive.find_all do |blog| %>
            <div class="col-lg-12">
              <!-- Row for user information -->
              <div class="row">
                  <div class="col-lg-3 col-3">
                    <div class="holdimage">
                      <img src="<%= @blog.user.profileimage %>" class="img-fluid" width="80px" height="80px">
                    </div>
                  </div>
                  <div class="col-lg-9 col-9">
                    <div class="holdposttitle" style="line-height: 16px;">
                      <span style="font-weight: 600; font-size: 14px;">
                      <%= blog.title %>
                      </span>
                      <br>
                      <span style="font-weight: 700; font-size: 10px; color: #dddddd;">
                      Posted by: <%= blog.user.name %>
                    </span>
                    <p>
                      <a href="/blogs/<%= blog.id %>" style="color: #f17100;">Read more</a>
                    </p>
                    </div>
                  </div>
                  
              </div>

              <!-- Row for user information -->
              <div class="row">
               <!--  <p>
                  <a href="" style="color: #f17100;">Read more</a>
                </p> -->
              </div>

              <!-- Row for user information -->
              <div class="row">
              </div>
            </div>
        <% end %>
      </div>
    </div>

  </div>
</div>




<% if current_user.has_role?(:blogwriter) %>
<%= link_to 'Edit', edit_blog_path(@blog) %> | <a href="/admindashboard">Admin</a>
<% elsif current_user.has_role?(:superadmin) %>
<%= link_to 'Edit', edit_blog_path(@blog) %> | <a href="/admindashboard">Admin</a>
<% end %>

