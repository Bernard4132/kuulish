<style type="text/css">

  .tcommindex {
    color: #f17100;
    font-size: 25px;
    margin-bottom: 25px;
  }

  .holdgrouppartial {
    background:linear-gradient(0deg,rgba(0, 0, 0,0.7),rgba(0, 0, 0,0.7)),url(https://res.cloudinary.com/nikasemo/image/upload/v1578625960/coolparent22_xocdas.jpg);
    background-position:center;
    height: 150px;
    width: 90%;
    border-radius: 25px;
    padding: 15px;
  }

</style>

<div class="container">
<div class="row">
  <div class="col-lg-12">
      <h1 class="tcommindex">Top Communities</h1>
  </div>
</div>

<div class="row">

<div class="col-lg-12">
  <div class="row no-gutters">
   <% Group.all.find_each do |group| %>

    <div class="col-lg-3 col-6">
      <div class="holdgrouppartial">
        <br>
        <p style="text-align: center;">
          <span style="color: #ffffff; font-weight: 500;"><%= group.name %></span>
        <br>
          <%= link_to "Join Group", memberships_path(group_id: group.id), method: :post, :class => "btn btn-primary",
      :style => "background-color: #ffffff; color: #f17100; border: 1px solid #f17100; border-radius: 20px; font-size: 11px; padding: 7px; margin-top: 10px; font-weight: 600;" %>
    </p>
        </p>
      </div>
    </div>

   <% end %>

</div>

</div>